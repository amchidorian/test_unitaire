{% extends 'base.html.twig' %}

{% block title %}Market{% endblock %}
{% block styles %}
    <link rel="stylesheet" href="{{ asset('build/css/market.css') }}">{% endblock %}

{% block body %}
    <section class="hero is-info is-fullheight">

        {% include 'navbar.html.twig' %}

        <div class="hero-body">
            <div class="column is-2 is-offset-2">
                <img src="https://upload.wikimedia.org/wikipedia/fr/thumb/f/f0/N%C3%AEmes_Olympique_logo_2018.svg/1200px-N%C3%AEmes_Olympique_logo_2018.svg.png"
                     alt="">
            </div>
            <div class="column is-4">
                <h3 class="title has-text-grey">Se Connecter</h3>
                <div class="box">
                    <div class="field">
                        <label class="label">Pour quel match vous voulez soutenir votre équipe ?</label>
                        <div class="control">
                            <div class="select is-danger is-fullwidth">
                                <select>
                                    <option>Select dropdown</option>
                                    {% if matchs is defined %}
                                        {% for match in matchs %}
                                            <option value="{{ match.getId() }}">{{ match.getEquipeExt() }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="e.g Alex Smith">
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Email</label>
                        <div class="control">
                            <input class="input" type="email" placeholder="e.g. alexsmith@gmail.com">
                        </div>
                    </div>
                    <div class="next is-expanded">
                        <a href="#" class="hvr-icon-hang">
                            <i class="fa fa-chevron-down hvr-icon"></i>
                        </a>
                    </div>
                </div>
                <p class="has-text-grey">
                    <a href="../">Sign Up</a> &nbsp;·&nbsp;
                    <a href="../">Forgot Password</a> &nbsp;·&nbsp;
                    <a href="../">Need Help?</a>
                </p>
            </div>
            <div class="column is-2">
            </div>
        </div>
    </section>
{% endblock %}
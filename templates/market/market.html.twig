{% extends 'base.html.twig' %}

{% block title %}Market{% endblock %}
{% block styles %}
    <link rel="stylesheet" href="{{ asset('build/css/market.css') }}">{% endblock %}

{% block body %}
    <section class="hero is-info is-fullheight">

        {% include 'navbar.html.twig' %}

        <div class="hero-body">
            <div class="column is-2 is-offset-2">
                <img src="https://upload.wikimedia.org/wikipedia/fr/thumb/f/f0/N%C3%AEmes_Olympique_logo_2018.svg/1200px-N%C3%AEmes_Olympique_logo_2018.svg.png"
                     alt="">
            </div>
            <div class="column is-4">
                <h3 class="title has-text-grey">Se Connecter</h3>
                <div class="box">
                    <div id="previous" class="field" style="display: none;">
                        <a href="#" class="hvr-icon-bob">
                            <i class="fa fa-chevron-up hvr-icon"></i>
                        </a>
                    </div>
                    <div id="form1" class="field">
                        <label class="label">Pour quel match vous voulez soutenir votre équipe ?</label>
                        <div class="control">
                            <div class="select is-danger is-fullwidth">
                                <select id="match">
                                    {% if matchs is defined %}
                                        {% for match in matchs %}
                                            <option value="{{ match.getId() }}">{{ match.getEquipeExt() }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div id="form2" style="display: none;" class="field">
                        <label class="label">Depuis quel tribune souhaitez vous supporter ?</label>
                        <div class="control">
                            <div class="select is-danger is-fullwidth">
                                <select id="tribune">
                                    {% if tribunes is defined %}
                                        {% for tribune in tribunes %}
                                            <option value="{{ tribune.getId() }}">{{ tribune.getNom() }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                            </div>
                            <p id="place_restante"></p>
                        </div>
                    </div>
                    <div id="form3" style="display: none;" class="field">
                        <label class="label">Pour quel match vous voulez soutenir votre équipe ?</label>
                        <div class="control">
                            <div class="select is-danger is-fullwidth">
                                <select id="tarif">
                                    {% if tarifs is defined %}
                                        {% for tarif in tarifs %}
                                            <option value="{{ tarif.getId() }}">{{ tarif.getNom()}} - {{ tarif.getPrix()}}€</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div id="form4" style="display: none;" class="field">
                        <div class="field-body is-horizontal">
                            <div class="field">
                                <label class="label">Nom</label>
                                <div class="control">
                                    <input class="input" id="nom" type="text" placeholder="e.g Alex Smith">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Prénom</label>
                                <div class="control">
                                    <input class="input" id="prenom" type="text" placeholder="e.g. alexsmith@gmail.com">
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Email</label>
                            <div class="control">
                                <input type="email" id="email" class="input" placeholder="Vous êtes abonné ? Entrez votre numéro.">
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Numéro Abonné</label>
                            <div class="control">
                                <input type="text" class="input" placeholder="Vous êtes abonné ? Entrez votre numéro.">
                            </div>
                        </div>
                    </div>
                    <div id="form5" style="display: none;" class="total"></div>
                    <div id="next" class="next1">
                        <a href="#" class="hvr-icon-hang">
                            <i class="fa fa-chevron-down hvr-icon"></i>
                        </a>
                    </div>
                </div>
                <p class="has-text-grey">
                    <a href="../">Sign Up</a> &nbsp;·&nbsp;
                    <a href="../">Forgot Password</a> &nbsp;·&nbsp;
                    <a href="../">Need Help?</a>
                </p>
            </div>
            <div class="column is-2">
                <img src="" alt="" class="ext">
            </div>
        </div>
        <div id="erreur"></div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/market.js') }}"></script>
{% endblock %}